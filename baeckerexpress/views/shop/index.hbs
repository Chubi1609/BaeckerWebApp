    {{>header}}
    {{>slideshow}}

{{#each products}}
<div class="row justify-content-center">
    {{#each this}}
    
        <div class="card" style="width: 18rem; margin:10px;">
            <img class="card-img-top"style="width:100% height: auto" src="{{this.imagePath}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text" style="font-size: 2vw;">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy now</a>
            </div>
        </div>
    
    {{/each}}
</div>
{{/each}}